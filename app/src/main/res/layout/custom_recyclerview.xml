<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    android:layout_margin="20dp">
    <ImageView
        android:id="@+id/imageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/addbutton"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tenXeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageRecyclerView"
        android:text="Ten Xe"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/loaiXeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenXeRecyclerView"
        android:text="Loai Xe"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/giaXeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loaiXeRecyclerView"
        android:text="Gia Xe"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />


</RelativeLayout>